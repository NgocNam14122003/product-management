extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
    +alert-error(5000)
    h1(class="mb-4") Thêm mới sản phẩm 
    form(action=`${prefixAdmin}/products/create` id="form-create-products" method="POST" enctype="multipart/form-data") 
        div(class="form-group")
            label(for="title") Tiêu đề 
            input(type="text" class="form-control" id="title" name="title" required) 
            div(class="form-group")
                label(for="desc") Mô tả 
                textarea(name="description" class="form-control textarea-mce" id="desc" row="5")
            div(class="form-group")
                label(for="price") Giá
                input(type="number" class="form-control" name="price" id="price" value="0" min="0")
            div(class="form-group") 
                label(for="discount") % Giảm giá
                input(type="number" class="form-control" name="discountPercentage" id="price" value="0" min="0")
            div(class="form-group") 
                label(for="stock") Số lượng
                input(type="number" class="form-control" name="stock" id="stock" value="0" min="0")
            div(class="form-group" upload-image) 
                label(for="thumbnail") Ảnh
                input(type="file" class="form-control" name="thumbnail" id="thumbnail" accept="image/*" upload-image-input)
                img(src="" upload-image-preview class="image-preview")
            div(class="form-group") 
                label(for="position") Vị trí
                input(type="text" class="form-control-file" name="position" id="position" placeholder="Tự động tăng" min = "1")
            div(class="form-group form-check form-check-inline") 
                input(type="radio" class="form-check-input" name="status" id="statusActive" value="active" checked)
                label(for="statusActive" class="form-check-label") Hoạt động 
            div(class="form-group form-check form-check-inline") 
                input(type="radio" class="form-check-input" name="status" id="statusInActive" value="inactive")
                label(for="statusInActive" class="form-check-label") Dừng hoạt động 
            div(class="form-group")
                button(type="submit" class="btn btn-primary") Tạo mới
    script(src="/admin/js/product.js")