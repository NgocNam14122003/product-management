extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main 
    +alert-success(5000)
    +alert-error(5000)
    h1(class="mb-4") Chỉnh sửa nhớm quyền
    form(action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH` id="form-edit-products" method="POST") 
        div(class="form-group")
            label(for="title") Tiêu đề 
            input(type="text" class="form-control" id="title" name="title" required value=data.title) 
        div(class="form-group")
            label(for="desc") Mô tả 
            textarea(name="description" class="form-control textarea-mce" id="desc" row="5") #{data.description}
        div(class="form-group")
            button(type="submit" class="btn btn-primary") Cập nhật
    script(src="/admin/js/product.js")